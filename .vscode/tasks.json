{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Web Build",
            "command": "emcc",
            "args": [
                "-o",
                "${fileBasenameNoExtension}.html",
                "${file}",
                "lib/libraylib.a",
                "-Os",
                "-Wall",
                "-I",
                "include",
                "-L",
                "lib",
                "-s",
                "USE_GLFW=3",
                "--shell-file","lib/minshell.html",
                "-DPLATFORM_WEB",
                "&&",
                "emrun",
                "${fileBasenameNoExtension}.html"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "HTML generated by emcc."
        }
    ],
    "version": "2.0.0"
}